/**index.wxss**/
page{
  height: 100%;
  overflow: none;
}
.container{
  background: #faf5f5;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; 
  overflow: none;
  position: fixed;
}
.box-wrap{
  display: flex;
  flex-direction: column;
  height: 840rpx;
  margin-top: 80rpx;
  position: relative;
  width: 640rpx;
  align-items: center;
}
.box-wrap .content{
  position: absolute;
  background: #fff;
  border: 1px solid #ccc;
  z-index: 3;
}
.box-wrap .content:nth-child(2) {
  transform: scale(.93,.93);
  top: 45rpx;
  z-index: 1;
}
.box-wrap .content:nth-child(3) {
  transform: scale(.84,.84);
  top: 95rpx;
  z-index: 0;
}
.box-wrap .content text{
  display: block;
  text-align: center
}
.t1{font-size: 20px;}
.t2{font-size: 12px; color: #ccc; margin-top: 10rpx;}
.t3{font-size: 20px; color:#ad263d; margin: 20rpx 0;}
.t4{font-size: 10px; color:#ccc; margin: 40rpx 0;}
.btn-wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 640rpx;
}
button{
  font-size: 14px;
  padding: 30rpx 26rpx;
  border: 1px solid #ccc;
  color: #a8253b;
  flex-grow: 1;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 5rpx;
  font-weight: bold;
}
button::after{
  border:0;
}
button:nth-child(2){
  background: #a8253b;
  color: #fff;
  border-color: #a8253b;
}
button:last-child{
  margin-right: 0;
}